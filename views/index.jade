h2 signin
form(action: '/signin', method: 'post')
  label username:
    input(name: 'username', type: 'text')
  label password:
    input(name: 'password', type: 'password')
h2 signup
form(action: '/signup', method: 'post')
  label username:
    input(name: 'username', type: 'text')
  label password:
    input(name: 'password', type: 'password')
  label confirm password:
    input(name: 'confirmation', type: 'password')
